<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnortRules">

    <Spinner
        android:id="@+id/SP_IP_ADDRESS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SP_IP_ADDRESS"
        android:text="get IPS"
        android:id="@+id/BTN_GET_IP"/>

    <Button
        android:text="GET DATA FROM IP"
        android:layout_alignParentRight="true"
        android:layout_below="@id/SP_IP_ADDRESS"
        android:id="@+id/BTN_GET_FROM_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ET_RESPONSE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BTN_GET_IP"/>

</RelativeLayout>