<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">

        <TextView
            android:id="@+id/tv_home_head"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CcureGen"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/tv_home_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_head"
            android:layout_centerHorizontal="true"
            android:text="Data is secured here!"
            android:textSize="30sp" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@id/tv_home_instruction"
            android:src="@drawable/home_image" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_below="@id/imageView"
            android:backgroundTint="@color/action_bar_blue"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Login" />

        <!--        <Button-->
        <!--            android:id="@+id/btn_sign_in_google"-->
        <!--            android:layout_width="180dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:backgroundTint="@color/action_bar_blue"-->
        <!--            android:text="Sign In with Google" />-->

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:text="Do not have an account? Register here" />


    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

